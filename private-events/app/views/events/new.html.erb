<h1>New Event</h1>

<div class="">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control", autofocus: true%><br>
      <%= f.label :description %><br>
      <%= f.text_area :description, size: "40x8", class: "form-control" %><br>
      <%= f.label :at_date, "Date" %>
      <%= f.date_field :at_date, value: Date.today, class: "form-control" %>
      <%= f.submit "Create Event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
