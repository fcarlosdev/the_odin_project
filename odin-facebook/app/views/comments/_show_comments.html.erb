<% if locals[:post].likes.length > 0 %>
  <div class="likes left-border right-border up-border">
    <%= image_tag("like.png") %>
    <span>
      <%= pluralize(locals[:post].count_likes, 'person') %> likes this.
    </span>
  </div>
<% end %>
<% if locals[:post].comments.any? %>
  <% locals[:post].comments.each do |comment| %>
    <div class="comment-body side-borders">
      <div id="info-user">
        <%= render 'shared/commenter' %>
      </div>
      <div id="comment-txt">
        <span> <%= comment.body %> </span>
      </div>
      <div class="comment-date">
        <span>date:</span>
      </div>
    </div>
  <% end %>
<% end %>
