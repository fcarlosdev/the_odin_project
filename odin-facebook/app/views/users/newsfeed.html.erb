<div class="main-header">
  <div class="header-holder">
    <%= link_to image_tag("fb_logo.png", class:'icon'), newsfeed_path %>
    <div class="header-form">
      <%= form_tag(newsfeed_path, method: "get") do %>
        <%= search_field_tag('search', nil, placeholder: "Search") %>
        <%= button_tag(name: nil)  do %>
          <%= image_tag("search-icon.png") %>
        <% end %>
      <% end %>
    </div>
    <div class="header-menu">
      <ul>
        <li>
          <div class="header-profile">
            <%= link_to image_tag("user_icon.jpg"), '#' %>
            <%= link_to current_user.first_name + current_user.last_name, '#' %>
          </div>
        </li>
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
      </ul>
    </div>
  </div>
  <div class="main-container">
    <div class="side_bar">
      <ul>
        <li>
          <div class="header-profile">
            <%= link_to image_tag("user_icon.jpg"), '#' %>
            <%= link_to current_user.first_name + current_user.last_name, '#' %>
          </div>
        </li>
        <li><%= link_to "Newsfeed", '#' %></li>
        <li><%= link_to "Timeline", '#' %></li>
        <li><%= link_to "All Users", '#' %></li>
        <li><%= link_to "Profile", '#' %></li>
        <li><%= link_to "Firends", '#' %></li>
        <li><%= link_to "Firends Requests", '#' %></li>
        <li><%= link_to "Notifications", '#' %></li>
      </ul>
    </div>
    <div class="feeds-content">
      <div class="frm_post">
        <%= render 'posts/form' %>
      </div>
    </div>
  </div>

</div>
