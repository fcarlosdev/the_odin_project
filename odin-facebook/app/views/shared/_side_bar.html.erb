<div class="side_bar">
  <ul>
    <li>
      <div class="profile-img">
        <!-- Refactory this code -->
        <%= link_to image_tag(avatar_for(current_user)), profile_path(current_user.profile) %>
      </div>
      <div class="profile-name">
        <%= link_to current_user.fullname, profile_path(current_user.profile) %>
      </div>
    </li>
    <li><%= link_to "Timeline", timeline_path(current_user) %></li>
    <li><%= link_to "All Users", users_path %></li>
    <li><%= link_to "Profile", profile_path(current_user.profile) %></li>
    <li><%= link_to "Friends", friends_path(current_user) %></li>
    <li>
      <!-- Refactor this code -->
      <% if friend_requests_pending > 0 %>
        <%= link_to "Friends Requests(#{friend_requests_pending})",
              friends_requests_path(current_user) %>
      <% else %>
        <%= link_to "Friends Requests", friends_requests_path(current_user) %>
      <% end %>
    </li>
  </ul>
</div>
