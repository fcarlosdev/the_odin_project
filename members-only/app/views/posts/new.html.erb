<h1>New Post</h1>

<div class="row">

  <div class="col-md-6 col-md-offset-3">

    <%=form_for @post do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_area :body, size: '50x7', class: 'form-control'  %>

      <%=f.submit 'Create Post', class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
