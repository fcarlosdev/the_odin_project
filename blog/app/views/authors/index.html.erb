<p id="notice"><%= notice %></p>

<h1>Listing Authors</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td width="80px"><%= author.username %></td>
        <td width="190px"><%= author.email %></td>
        <td width="45px"><%= link_to 'Show', author, class: "link" %></td>
        <td width="35px"><%= link_to 'Edit', edit_author_path(author), class: "link" %></td>
        <td><%= link_to 'Destroy', author, method: :delete,
          data: { confirm: 'Are you sure?' }, class: "link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: "button-link" %>
