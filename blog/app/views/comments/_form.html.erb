<h3>Post a Comment</h3>

<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your Name"  %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Your Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
    <% if logged_in? %>
      <%= link_to "Delete", article_path(@article), method: :delete,
          data: {confirm: "Really delete the article?"}, class: "button-link" %>
      <%= link_to "Edit", edit_article_path(@article) ,class: "button-link" %>
      <%= link_to "Back", articles_path, class: "button-link" %>
    <% end %>
  </p>
<% end %>
