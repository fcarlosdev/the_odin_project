        <input type="button" value="Cipher other text" onclick="">
        <div id="result">
          <label for="ciphered_text" class="ciphered_txt">Ciphered text:</label>
          <output name="ciphered_text">
             <%=result%>
           </output>
        </div>
      </form>
    </div>

  </body>
